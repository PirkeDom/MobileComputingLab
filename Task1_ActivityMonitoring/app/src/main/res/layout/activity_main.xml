<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/label_accelerometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_accelerometer"
        app:layout_constraintLeft_toLeftOf="parent"></TextView>
    <TextView
        android:id="@+id/label_seconds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_seconds"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_accelerometer"></TextView>
    <Button
        android:id="@+id/buttonstart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start recording"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_seconds"/>
    <Button
        android:id="@+id/buttonstop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonstart"/>

    <EditText
        android:id="@+id/text_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Activity"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonstop" />
    <Button
        android:id="@+id/buttontest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_activity"/>
    <TextView
        android:id="@+id/label_predicted_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_predicted_activity"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttontest"></TextView>
    <com.jjoe64.graphview.GraphView
        android:id="@+id/accelerometer_x"
        android:layout_width="match_parent"
        android:layout_height="100dip"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_predicted_activity"/>
    <com.jjoe64.graphview.GraphView
        android:id="@+id/accelerometer_y"
        android:layout_width="match_parent"
        android:layout_height="100dip"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accelerometer_x"/>
    <com.jjoe64.graphview.GraphView
        android:id="@+id/accelerometer_z"
        android:layout_width="match_parent"
        android:layout_height="100dip"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accelerometer_y"/>

</android.support.constraint.ConstraintLayout>